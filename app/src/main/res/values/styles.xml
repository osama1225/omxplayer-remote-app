<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="send_btnStyle" parent="@android:style/Widget.Button">
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:background">@drawable/send_button_ui</item>
        <item name="android:padding">10dip</item>
    </style>

    <style name="delete_btnStyle" parent="@android:style/Widget.Button">
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/delete_btn_ui</item>
        <item name="android:padding">10dip</item>
    </style>

    <style name="send_mediaStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/send_media_ui</item>
    </style>

    <style name="remove_mediaStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/remove_media_ui</item>
    </style>

    <style name="close_mediaStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/close_media_ui</item>
    </style>
</resources>