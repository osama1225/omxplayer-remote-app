<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/pass_title_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/network_mode" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pass_title_id"
        android:layout_below="@+id/pass_title_id"
        android:background="@drawable/options_bk4"
        android:minHeight="100dp" >

        <RadioGroup
            android:id="@+id/network_mode_radio_group_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
             >

            <RadioButton
                android:id="@+id/network_adhoc_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Ad-hoc"
                android:layout_marginBottom="10dp"
                 />

            <RadioButton
                android:id="@+id/network_wlan_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wlan" />

        </RadioGroup>

        <Button
            android:id="@+id/network_mode_done_btn_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/network_mode_radio_group_id"
            android:layout_centerHorizontal="true"
            android:text="Done" />

    </RelativeLayout>

</RelativeLayout>