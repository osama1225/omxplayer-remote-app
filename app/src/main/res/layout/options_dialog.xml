<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/options_title_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/options_title" />

    <LinearLayout
        android:id="@+id/optionsContainer_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/options_bk4"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="40dp">

        <ImageView
            android:id="@+id/send_media_id"
            style="@style/send_mediaStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp" />

        <ImageView
            android:id="@+id/remove_media_id"
            style="@style/remove_mediaStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="20dp" />

        <ImageView
            android:id="@+id/close_media_id"
            style="@style/close_mediaStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="20dp" />
    </LinearLayout>
</LinearLayout>
